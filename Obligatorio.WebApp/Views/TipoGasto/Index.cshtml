@model IEnumerable<Obligatorio.DTOs.DTOs.DTOsTipoGasto.DTOTipoGasto>

@{
    ViewData["Title"] = "Listado de Tipos de Gasto";
}

<h2 class="mb-3">Listado de Tipos de Gasto</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">
        @TempData["Msg"]
    </div>
}


<a asp-action="Create" class="btn btn-primary mb-3">Nuevo Tipo de Gasto</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@ViewBag.msg