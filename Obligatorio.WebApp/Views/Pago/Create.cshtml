@model Obligatorio.DTOs.DTOs.DTOsPago.DTOAltaPago

@{
    ViewData["Title"] = "Alta de Pago";
}

<h2 class="mb-3">Alta de Pago</h2>

<form asp-action="Create" method="post" class="border p-4 rounded shadow-sm">

    @ViewBag.msg

    <div class="form-group mb-3">
        <label asp-for="TipoSeleccionado" class="form-label">Tipo de Pago</label>
        <select asp-for="TipoSeleccionado" class="form-select" id="tipoPagoSelect">
            <option value="">Seleccione un tipo</option>
            <option value="Unico">Único</option>
            <option value="Recurrente">Recurrente</option>
        </select>
        <span asp-validation-for="TipoSeleccionado" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="IdTipoGasto" class="form-label">Tipo de Gasto</label>
        <select asp-for="IdTipoGasto" class="form-select">
            <option value="">Seleccione un tipo de gasto</option>
            @foreach (var tg in Model.TiposGastos)
            {
                <option value="@tg.Id">@tg.Nombre</option>
            }
        </select>
        <span asp-validation-for="IdTipoGasto" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MetodoDePago" class="form-label">Método de Pago</label>
        <select asp-for="MetodoDePago" class="form-select">
            <option value="">Seleccione método</option>
            <option value="Efectivo">Efectivo</option>
            <option value="Credito">Crédito</option>
        </select>
        <span asp-validation-for="MetodoDePago" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Monto" class="form-label">Monto</label>
        <input asp-for="Monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div id="camposPagoUnico" style="display:none;">
        <div class="form-group mb-3">
            <label asp-for="FechaPago" class="form-label">Fecha de Pago</label>
            <input asp-for="FechaPago" class="form-control" type="date" />
            <span asp-validation-for="FechaPago" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="NumeroRecibo" class="form-label">Número de Recibo</label>
            <input asp-for="NumeroRecibo" class="form-control" />
            <span asp-validation-for="NumeroRecibo" class="text-danger"></span>
        </div>
    </div>

    <div id="camposPagoRecurrente" style="display:none;">
        <div class="form-group mb-3">
            <label asp-for="FechaInicio" class="form-label">Fecha Inicio</label>
            <input asp-for="FechaInicio" class="form-control" type="date" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaFin" class="form-label">Fecha Fin</label>
            <input asp-for="FechaFin" class="form-control" type="date" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Registrar pago" class="btn btn-primary" />
    </div>

</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const tipoPagoSelect = document.getElementById("tipoPagoSelect");
            const camposPagoUnico = document.getElementById("camposPagoUnico");
            const camposPagoRecurrente = document.getElementById("camposPagoRecurrente");

            function actualizarCampos() {
                const tipo = tipoPagoSelect.value;
                camposPagoUnico.style.display = tipo === "Unico" ? "block" : "none";
                camposPagoRecurrente.style.display = tipo === "Recurrente" ? "block" : "none";
            }

            tipoPagoSelect.addEventListener("change", actualizarCampos);
            actualizarCampos();
        });
    </script>
}
