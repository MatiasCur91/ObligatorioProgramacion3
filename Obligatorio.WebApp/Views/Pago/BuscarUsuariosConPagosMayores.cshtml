@{
    ViewData["Title"] = "Buscar Usuarios con Pagos Mayores";
}

<h2>Buscar usuarios por monto total de pagos</h2>

<form asp-action="BuscarUsuariosConPagosMayores" method="post">
    <div class="form-group">
        <label>Ingrese monto mínimo:</label>
        <input type="number" step="0.01" name="monto" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Buscar</button>
</form>