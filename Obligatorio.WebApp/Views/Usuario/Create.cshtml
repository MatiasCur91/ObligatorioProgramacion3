@model Obligatorio.WebApp.Models.AltaUsuarioViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Alta de usuario</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dto.Nombre" class="control-label"></label>
                <input asp-for="Dto.Nombre" class="form-control" />
                <span asp-validation-for="Dto.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dto.Apellido" class="control-label"></label>
                <input asp-for="Dto.Apellido" class="form-control" />
                <span asp-validation-for="Dto.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dto.Password" class="control-label"></label>
                <input asp-for="Dto.Password" class="form-control" />
                <span asp-validation-for="Dto.Password" class="text-danger"></span>
            </div>

          
            <div>
                <label asp-for="Roles" class="control-label"></label>
                <select class="form-select" asp-items="Model.Roles" asp-for="@Model.Dto.IdRolSeleccionado">
                </select>

            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@ViewBag.msg
<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
